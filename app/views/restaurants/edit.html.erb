<div class="col-md-6 col-md-offset-3">
  <%= form_for @restaurant do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 5, :class => 'form-control' %>
    </div>
      <%= f.submit :class => 'btn btn-primary' %>
  <% end %>
</div>
