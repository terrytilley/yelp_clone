<div class="col-md-6 col-md-offset-3">
  <h3 class="text-center">Add Review</h3>

<%= form_for [@restaurant, @review] do |f| %>
  <div class="form-group">
    <%= f.label :thoughts %>
    <%= f.text_area :thoughts, rows: 5, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :rating %>
    <%= f.select :rating, (1..5) %>
  </div>
  <%= f.submit "Leave Review", :class => 'btn btn-primary' %>
<% end %>

</div>
